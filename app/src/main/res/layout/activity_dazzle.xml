<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dazzle">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/dazzle_main_1"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#ff4f02">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:onClick="flow_1_click"
                android:src="@drawable/pic_home" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_1"
            android:layout_width="412dp"
            android:layout_height="600dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="412dp"
                android:layout_height="600dp"
                android:src="@drawable/flow_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dazzle_main_2"
            android:layout_width="412dp"
            android:layout_height="300dp"
            android:background="#ff4f02"
            android:onClick="flow_1_click"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32131"></TextView>

            <ImageView
                android:layout_width="412dp"
                android:layout_height="600dp"
                android:layout_centerVertical="true"
                android:src="@drawable/pic_about" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/flow_2"
            android:layout_width="900dp"
            android:layout_height="900dp"
            android:background="#ccc"
            android:orientation="vertical">

            <ImageView
                android:layout_width="900dp"
                android:layout_height="900dp"
                android:src="@drawable/flow_2" />
        </LinearLayout>


    </LinearLayout>





